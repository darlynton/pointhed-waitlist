# Database
DATABASE_URL="postgresql://macbook@localhost:5432/waitlist_deploy?schema=public"

# Server
PORT=3001
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:5173"

# WhatsApp (for instant demo)
WHATSAPP_API_TOKEN="your_whatsapp_api_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"

# Email Configuration
# Choose one: 'resend' (recommended), 'gmail', 'sendgrid', or use custom SMTP settings below
EMAIL_SERVICE="resend"
EMAIL_FROM="onboarding@resend.dev"

# Resend (recommended for production - 100 emails/day free)
RESEND_API_KEY="re_your_api_key"

# Gmail (for testing - requires App Password)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# For SendGrid (alternative)
# EMAIL_SERVICE="sendgrid"
# SENDGRID_API_KEY="your-sendgrid-api-key"

# For Custom SMTP (alternative)
# SMTP_HOST="smtp.your-provider.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-smtp-username"
# SMTP_PASSWORD="your-smtp-password"

# Admin token for protected debug endpoints (set a random value in Render)
ADMIN_TOKEN="replace_with_a_strong_token"
